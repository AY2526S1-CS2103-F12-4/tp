<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.layout.Region?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         title="Zenith - Tutor Smarter" minWidth="900" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <!-- Header with Logo and Menu Bar Combined -->
        <HBox styleClass="header-box" alignment="CENTER_LEFT" spacing="10" VBox.vgrow="NEVER">
          <padding>
            <Insets top="10" right="15" bottom="10" left="15" />
          </padding>

          <!-- Left side: Logo and Title -->
          <HBox spacing="10" alignment="CENTER_LEFT" prefHeight="65.0">
            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
              <Image url="@/images/zenith_logo.png" />
            </ImageView>
            <Label styleClass="header-label" text="zenith" />
            <Label styleClass="header-subtitle" text="TUTOR SMARTER" />
          </HBox>

          <!-- Spacer to push menu to the right -->
          <Region HBox.hgrow="ALWAYS" />

          <!-- Right side: Menu Bar -->
          <MenuBar fx:id="menuBar" styleClass="header-menu-bar">
            <Menu mnemonicParsing="false" text="File">
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
            </Menu>
          </MenuBar>
        </HBox>


        <!-- Command Box -->
        <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>

        <!-- Result Display (Feedback Area) -->
        <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                   minHeight="140" prefHeight="155" maxHeight="200">
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>

        <!-- Main Content: Split Pane - 30% LEFT, 70% RIGHT -->
        <SplitPane id="splitPane" fx:id="splitPane" dividerPositions="0.30" VBox.vgrow="ALWAYS">

          <!-- Left Panel: Contact List (30%) -->
          <VBox fx:id="personList" styleClass="pane-with-border" minWidth="250" prefWidth="340">
            <padding>
              <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
          </VBox>

          <!-- Right Panel: Detailed View with Header (70%) -->
          <VBox styleClass="pane-with-border" minWidth="400">
            <!-- Detailed View Header -->
            <HBox styleClass="detailed-view-header-bar" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
              <padding>
                <Insets top="10" right="15" bottom="10" left="15" />
              </padding>
              <Label styleClass="detailed-view-header-label" text="DETAILED VIEW" />
            </HBox>

            <!-- Detailed View Content -->
            <StackPane fx:id="detailedViewPlaceholder" VBox.vgrow="ALWAYS">
              <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
              </padding>
            </StackPane>
          </VBox>

        </SplitPane>

        <!-- Status Bar (bottom) -->
        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>